{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noEmit": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": ["*.ts"],
  "exclude": ["../node_modules", "../dist"]
}
